pattern: 
 - ".+[drl|DRL]"
afterPackage:
 - "import function org.drools.examples.helloworldaop.UtilityClass.trace"
afterRule:
 - "salience 5"
afterWhen:
 - "eval( trace( \"\\${RULE_NAME} when started\" ) )"
beforeThen:
 - "eval( trace( \"\\${RULE_NAME} when ended\" ) )"
afterThen:
 - "trace( \"\\${RULE_NAME} then started\" );"
beforeEnd:
 - "trace( \"\\${RULE_NAME} then ended\" );"